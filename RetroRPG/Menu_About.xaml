<Window x:Class="RetroRPG.Menu_About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetroRPG"
        mc:Ignorable="d"
        Title="Menu_About" Height="450" Width="800">

    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="255"/>
                <RowDefinition Height="255"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="270"/>
            </Grid.ColumnDefinitions>

            <WrapPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" Grid.Row="0"  Background="Black" Name="StackMap"
                       ></WrapPanel>
            <StackPanel Grid.Row="0" Grid.Column="2" Background="DarkGray" Name="StackTiles"
                        >
                <Button Name="ExportMap" Height="30" Click="ExportMap_Click">Export</Button>
            </StackPanel>

        </Grid>
    </Viewbox>
</Window>
